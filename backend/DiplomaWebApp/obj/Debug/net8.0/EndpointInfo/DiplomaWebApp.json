  "components": {
    "schemas": {
      "EndRoundRecord": {
        "type": "object",
        "properties": {
          "team1Points": {
            "maximum": 12,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "team2Points": {
            "maximum": 12,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "assessorsPoints": {
            "maximum": 12,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "mistakes": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MistakeRecord"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GameRecord": {
        "required": [
          "captainsRoundFormat",
          "chosenTasksIds",
          "name",
          "solvingTime",
          "studentsTeam1",
          "studentsTeam2",
          "team1CaptainId",
          "team1Name",
          "team2CaptainId",
          "team2Name"
        ],
        "type": "object",
        "properties": {
          "solvingTime": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "captainsRoundFormat": {
            "maxLength": 999,
            "minLength": 10,
            "type": "string"
          },
          "chosenTasksIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          },
          "studentsTeam1": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          },
          "team1Name": {
            "minLength": 1,
            "type": "string"
          },
          "team1CaptainId": {
            "type": "integer",
            "format": "int32"
          },
          "team1ViceCaptainId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "studentsTeam2": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            }
          },
          "team2Name": {
            "maxLength": 25,
            "minLength": 3,
            "type": "string"
          },
          "team2CaptainId": {
            "type": "integer",
            "format": "int32"
          },
          "team2ViceCaptainId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JureRecord": {
        "required": [
          "fatname",
          "login",
          "name",
          "password",
          "surname"
        ],
        "type": "object",
        "properties": {
          "name": {
            "minLength": 1,
            "type": "string"
          },
          "surname": {
            "minLength": 1,
            "type": "string"
          },
          "fatname": {
            "minLength": 1,
            "type": "string"
          },
          "login": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginRecord": {
        "type": "object",
        "properties": {
          "login": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
